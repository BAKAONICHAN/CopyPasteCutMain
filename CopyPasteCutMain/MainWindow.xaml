<Window x:Class="CopyPasteCutMain.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CopyPasteCutMain"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
   
        <Grid FocusManager.IsFocusScope="True">
            <Button Name="Copy" Content="Copy" HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top" Width="119" Height="44" Foreground="Yellow" Background="Blue" Command="Copy"  CommandTarget="{Binding ElementName=TextBox}" ></Button>
            <Button Name="Paste" Content="Paste" HorizontalAlignment="Left" Margin="186,28,0,0" VerticalAlignment="Top" Width="119" Height="44"  Foreground="Yellow" Background="Blue" Command="Paste" CommandTarget="{Binding ElementName=TextBox}" ></Button>
            <Button Name="Cut" Content="Cut" HorizontalAlignment="Left" Margin="361,28,0,0" VerticalAlignment="Top" Width="119" Height="44" Foreground="Yellow" Background="Blue" Command="Cut" CommandTarget="{Binding ElementName=TextBox}"></Button>
            <TextBox Name="TextBox" HorizontalAlignment="Left" Height="185" Margin="29,124,0,0"   VerticalAlignment="Top" Width="478">

            </TextBox>
        </Grid>
    
</Window>
